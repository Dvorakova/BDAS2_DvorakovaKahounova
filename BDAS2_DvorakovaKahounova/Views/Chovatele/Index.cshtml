<table class="table table-bordered">
	@foreach (var pes in Model)
	{
		<tr>
			<!-- První buňka - Fotografie -->
			<td style="width: 150px;">

				@{
					string imageUrl = pes.ID_FOTOGRAFIE != null
					? Url.Action("GetImage", "Pes", new { id = pes.ID_FOTOGRAFIE })
					: Url.Action("DefaultImage", "Pes");
				}
				<img src="@imageUrl" alt="Fotka psa" style="width: 150px; height: auto;">
			</td>

			<!-- Druhá buňka - Nová tabulka pro informace o psu -->
			<td>
				<table class="table table-bordered">
					<tr>
						<td><strong>Jméno:</strong></td>
						<td><strong>Číslo čipu:</strong></td>
						<td><strong>Datum narození:</strong></td>
						<td><strong>Pohlaví:</strong></td>
						<td><strong>Barva:</strong></td>
						<td><strong>Plemeno:</strong></td>
						<td><strong>Váha (kg):</strong></td>
						<td><strong>Vlastnosti:</strong></td>
						<td><strong>Důvod pobytu:</strong></td>
						<td><strong>Krmná dávka:</strong></td>
						<td><strong>Majitel:</strong></td>
						<td><strong>Karanténa do:</strong></td>
					</tr>
					<tr>
						<td>@pes.JMENO</td>
						<td>@pes.CISLO_CIPU</td>
						<td>@pes.NAROZENI</td>
						<td>
							@if (pes.POHLAVI == 0)
							{
								<span>&male;</span>
							}
							else if (pes.POHLAVI == 1)
							{
								<span>&female;</span>
							}
							else
							{
								<span>Neznámé</span>
							}
						</td>
						<td>@pes.BARVA</td>
						<td>@pes.PLEMENO</td>
						<td>@pes.VAHA.ToString("F1")</td>
						<td>@pes.VLASTNOSTI</td>
						<td>@pes.DUVOD_POBYTU</td>
						<td>@pes.KRMNA_DAVKA</td>
						<td>@pes.MAJITEL</td>
						<td>@pes.KARANTENA_DO?.ToShortDateString()</td>

					<tr>

						<td colspan="2">
							@if (!string.IsNullOrEmpty(pes.REZERVOVANO))
							{
								<span>@pes.REZERVOVANO</span>
							}
							else
							{
								<button class="btn btn-primary">Vyřídit rezervaci</button>
							}
						</td>
						<td colspan="2"><button class="btn btn-primary">Vyřídit Adopci</button></td>
						<td colspan="2"><button class="btn btn-primary">Upravit vlastnosti</button></td>
						<td colspan="2"><button class="btn btn-primary">Upravit fotografii</button></td>
						<td colspan ="2"><button class="btn btn-primary">Přidat záznam o odčervení</button></td>
						<td colspan="2"><button class="btn btn-primary">Přidat záznam o očkování</button></td>
					</tr>

				</table>
			</td>
		</tr>
	}
</table>
 


	

