
@model BDAS2_DvorakovaKahounova.Models.EmailModel

<div class="container-fluid">
    <h1>Kontakty</h1>

    <div class="row">
        <!-- Levá část - Kontakty -->
        <div class="col-md-6">
            <div class="container-kontakty">
                <h2 class="h2-kontakty">Kontakty</h2>
                <p class="p-kontakty">
                    <strong>Majitel:</strong> Jan Novák<br />
                    <strong>Telefon:</strong> +420 123 456 789<br />
                    <strong>Email:</strong> utuleklucky@gmail.com<br />
                    <strong>Pracovní doba:</strong> Po-Pá 9:00 - 17:00
                </p>

                <h2 class="h2-kontakty">Adresa</h2>
                <p class="p-kontakty">
                    <strong>Psí útulek LUCKY</strong><br />
                    Vlásenická 842<br />
                    Pelhřimov, PSČ 39301<br />
                    Česká republika
                </p>
            </div>
        </div>

        <!-- Pravá část - Mapa -->
        <div class="col-md-6">
            <div class="container-mapa">
                <h2 class="h2-kontakty">Kde nás najdete</h2>
                <iframe class="mapa" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d14327.235864487475!2d15.202192116649549!3d49.42994672909061!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x470ce5d77ff8716b%3A0xdc4ad538c4f81c82!2zVmzDoXNlbmlja8OhIDg0MiwgMzkzIDAxIFBlbGjFmWltb3Y!5e0!3m2!1scs!2scz!4v1733323557528!5m2!1scs!2scz"
                        width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy">
                        </iframe>
            </div>
        </div>
    </div>

    <!-- Dotazník -->
    <div class="row mt-4">
        <div class="col-12">
            <h2 class="h2-kontakty">Máte dotaz? Napište nám</h2>
            <form asp-action="Kontakty" class="form-kontakty" method="post">
                <div class="form-group">
                    <label for="email">Váš e-mail:</label>
                    @* <input type="email" id="email" class="form-control" runat="server" required /> *@
                    <input type="email" name="email" id="email" class="form-control" value="@ViewBag.UserEmail" runat="server" required />
                </div>
                <div class="form-group">
                    <label for="Message">Dotaz:</label>
                    <textarea asp-for="Message" class="form-control" id="Message" rows="5" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Odeslat</button>
            </form>

        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <script>
        alert(@Html.Raw(Json.Serialize(TempData["SuccessMessage"])));

        document.addEventListener('DOMContentLoaded', function () {
            const textarea = document.getElementById("Message");
            if (textarea) textarea.value = ""; 
        });
    </script>
}

@if (TempData["ErrorMessage"] != null)
{
    <script>
        alert(@Html.Raw(Json.Serialize(TempData["ErrorMessage"])));
    </script>
}

