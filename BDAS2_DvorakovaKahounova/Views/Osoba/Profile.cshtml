@model BDAS2_DvorakovaKahounova.Models.Osoba

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profil</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <h1>Můj účet</h1>
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Jméno</dt>
                    <dd class="col-sm-8">@Model.JMENO</dd>

                    <dt class="col-sm-4">Příjmení</dt>
                    <dd class="col-sm-8">@Model.PRIJMENI</dd>

                    <dt class="col-sm-4">Telefon</dt>
                    <dd class="col-sm-8">@Model.TELEFON</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Model.EMAIL</dd>
                </dl>
            </div>
        </div>

        <form method="post" asp-action="Logout">
            <button type="submit" class="btn btn-danger">Odhlásit se</button>
        </form>
    </div>
</body>
</html>
